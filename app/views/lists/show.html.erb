<h1><%= @list.name %></h1>

<h2>Movies in this list:</h2>
<ul>
  <% @list.bookmarks.each do |bookmark| %>
    <li>
      <%= bookmark.movie.title %>
      <%= link_to "Delete", list_bookmark_path(@list, bookmark), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
%>
    </li>
  <% end %>
</ul>

<h2>Add a new movie:</h2>
<%= form_with(model: [@list, @bookmark], url: list_bookmarks_path(@list)) do |form| %>

  <div class="field">
    <%= form.label :movie_id %>
    <%= form.collection_select :movie_id, Movie.all, :id, :title, prompt: "Select a movie" %>
  </div>

  <div class="field">
    <%= form.label :comment %>
    <%= form.text_field :comment %>
  </div>

  <div class="actions">
    <%= form.submit 'Add a movie' %>
  </div>
<% end %>

<%= link_to 'Back', lists_path %>
